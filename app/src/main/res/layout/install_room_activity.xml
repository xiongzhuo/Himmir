<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_top_view"
        android:layout_width="fill_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tv_add_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/evaluation_add"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:text="添加新房间"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <com.himmiractivity.xlistview.XListView
        android:id="@+id/listview_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"></com.himmiractivity.xlistview.XListView>
</LinearLayout>