<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_top_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x30">

        <com.himmiractivity.view.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/x10"
            android:textColorHint="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <com.himmiractivity.view.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:hint="获取验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="@dimen/x10"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@drawable/loding_bg_sel"
                android:padding="@dimen/x10"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.himmiractivity.view.ClearEditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/edittext_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/x10"
            android:textColorHint="@android:color/darker_gray" />

        <com.himmiractivity.view.ClearEditText
            android:id="@+id/et_pass_comit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/edittext_bg"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/x10"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_rese_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/loding_bg_sel"
            android:padding="@dimen/x10"
            android:text="重置密码"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>